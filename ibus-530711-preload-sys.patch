 static void
+_config_set_value_done (GObject      *object,
+                        GAsyncResult *res,
+                        gpointer      user_data)
+{
+    IBusConfig *config = (IBusConfig *) object;
+    GVariant *value = (GVariant *) user_data;
+    GError *error = NULL;
+
+    g_assert (IBUS_IS_CONFIG (config));
+
